---
import '@/styles/global.css';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

interface Props {
  pageTitle: string
  headerTitle?: string
}

const { pageTitle, headerTitle = "@woodnx.com" } = Astro.props;
---
<html lang="ja" class="bg-sky-50">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/jpeg" href="/profile.png" />
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@400;500;700;800;900&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/@twemoji/api@latest/dist/twemoji.min.js" crossorigin="anonymous"></script>
    <title>{pageTitle} | @woodnx.com</title>
  </head>
  <body data-pagedind-ignore>
    <Header title={headerTitle}>
      <slot name="header" />
    </Header>
    <main class="main p-4">
      <slot/>
    </main>
    <Footer />
  </body>
</html>

<style>
  .main {
    flex: 1 0 auto;
    width: 100%;
    max-width: 1000px;
    margin: 0 auto;
    transform:rotateZ(0.05deg);
  }
</style>
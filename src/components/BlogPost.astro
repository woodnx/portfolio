---
import Badge from './Badge.astro';
import dayjs from 'dayjs';
import Twemoji from './Twemoji.astro';
import { Icon } from 'astro-icon/components';

interface Props {
  title: string
  id: string
  publishedAt: Date | string
  category: string
  tags?: string[]
  entry: string
  icon?: string
}

const { title, publishedAt, id, category, tags = [], entry, icon: _icon } = Astro.props;

const published = dayjs(publishedAt).format("YYYY/MM/DD");

const icon = _icon || (
  category == 'Life' ? '‚òïÔ∏è' :
  category == 'Tech' ? '‚öíÔ∏è' :
  'üóíÔ∏è'
)
---
<div
  class="flex items-center gap-6 md:px-6 md:py-2 rounded-2xl border-4 border-transparent hover:border-sky-200 overflow-hidden" 
>
  <a 
    class="justify-self-center"
    href={`/posts/${id}`}
    style="cursor:pointer" 
  >
    <Twemoji icon={icon}/>
  </a>
  <div class="flex flex-col">
    <a 
      class="flex flex-col"
      href={`/posts/${id}`}
      style="cursor:pointer" 
    >
      <p class="font-bold md:text-2xl">{title}</p>
      <p class="flex-items mb-1 entry-text">
        {entry}
      </p>
    </a>
    <div class="flex flex-wrap gap-x-3 gap-y-0.5">
      <p class="flex items-center gap-1 text-sm">
        <Icon name="tabler:calendar-week" />
        {published}
      </p>
      <div class="w-[100%] md:hidden"></div>
      <Badge 
        label={category} 
        link={`/categories/${category}`} 
        icon='tabler:category' 
      />
      {
        tags?.map((tag) => 
          <Badge 
            label={tag} 
            link={`/tags/${tag}`} 
            icon='tabler:tag'
          />
        )
      }
    </div>
  </div>
</div>

<style>
  .entry-text {
    display: none;
  }

  @media (min-width: 768px) {
    .entry-text {
      display: -webkit-box;
      overflow: hidden;
      -webkit-line-clamp: 1;
      -webkit-box-orient: vertical;
    }
  }
</style>
---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro'
import profileImg from "../images/profile.jpg";

interface Props {
  image?: ImageMetadata
  url?: string
}

const { image, url = "" } = Astro.props
---
<div class="bg-white border border-gray-200 rounded-lg shadow-sm">
  <figure>
    <a href={url}>
    <Image src={image || profileImg} alt="" class="rounded-t-lg object-cover h-30" />
    </a>
  </figure>
  <div class="p-4">
    <slot />
  </div>
</div>
---
interface Props {
  label: string
  description: string
}

const { label, description } = Astro.props
---
<div class="flex gap-x-2 items-center text-lg">
  <p class="flex-none px-2 py-1 rounded-full min-w-20 font-bold bg-sky-600 text-white text-center text-sm md:min-w-30 md:text-base">{label}</p>
  <p class="flex-1">{description}</p>
</div>